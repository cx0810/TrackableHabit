<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/colorAccent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/montserrat"
        android:hint="@string/user_manual"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <ImageView
            android:id="@+id/createImageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_create"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/createTextView"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat"
            android:hint="@string/create_a_habit"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:fontFamily="@font/montserrat"
        android:hint="@string/tap_on_the_create_button"
        android:layout_gravity="start"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="14sp"
        android:layout_marginStart="85dp" />

    <ImageView
        android:id="@+id/createSSImageView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/user_manual_create" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <ImageView
            android:id="@+id/editImageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/ic_check" />

        <TextView
            android:id="@+id/editTextView"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat"
            android:hint="@string/edit_a_habit"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:fontFamily="@font/montserrat"
        android:hint="@string/tap_on_the_habit_name"
        android:layout_gravity="start"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="14sp"
        android:layout_marginStart="85dp" />

    <ImageView
        android:id="@+id/editSSImageView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/user_manual_edit" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <ImageView
            android:id="@+id/deleteImageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            app:srcCompat="@drawable/ic_delete" />

        <TextView
            android:id="@+id/deleteTextView"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat"
            android:hint="@string/delete_a_habit"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHighlight="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:fontFamily="@font/montserrat"
        android:hint="@string/swipe_the_habit_away"
        android:layout_gravity="start"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="14sp"
        android:layout_marginStart="85dp" />

    <ImageView
        android:id="@+id/deleteSSImageView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/user_manual_delete" />

</LinearLayout>