<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/decrementCountBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/decrement"
            android:textColor="#737373"
            android:textSize="30sp" />

        <LinearLayout
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="#A6DFDA"
            android:orientation="vertical">

            <TextView
                android:id="@+id/habitNameBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/habit"
                android:textAllCaps="true"
                android:textColor="#737373"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/habitCount"
                    android:layout_width="142dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/_0"
                    android:textAllCaps="true"
                    android:textColor="#737373" />

                <TextView
                    android:id="@+id/habitSlash"
                    android:layout_width="21dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/slash"
                    android:textAllCaps="true"
                    android:textColor="#737373" />

                <TextView
                    android:id="@+id/habitTarget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/_0"
                    android:textAllCaps="true"
                    android:textColor="#737373" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/incrementCountBtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/increment"
            android:textColor="#737373"
            android:textSize="24sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

